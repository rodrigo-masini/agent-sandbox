# ==============================================
# ENVIRONMENT VARIABLES TEMPLATE
# ==============================================

# Application Settings
APP_NAME=Magic-Agent-Sandbox
APP_ENV=development
APP_VERSION=1.0.0
APP_DEBUG=true
LOG_LEVEL=debug
TIMEZONE=UTC

# Server Configuration
HOST=0.0.0.0
PORT=8080

# Fabric API Configuration (REQUIRED)
FABRIC_API_KEY=your_api_key_here
FABRIC_ORG_ID=your_org_id_here
FABRIC_PROJECT_ID=your_project_id_here
FABRIC_BASE_URL=https://api.telaos.com/v1
FABRIC_MODEL=wizard
FABRIC_TIMEOUT=300

# Magic Agent Sandbox Backend Configuration
AGTSDBX_BASE_URL=http://localhost:8000
AGTSDBX_TIMEOUT=300
AGTSDBX_API_KEY=
WORKDIR=/app/WORKDIR

# Security Configuration
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY=3600
API_KEYS=key1,key2,key3
REQUIRE_AUTH=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=60
RATE_LIMIT_WINDOW=60

# Redis Configuration (optional, for caching)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Database Configuration
DATABASE_URL=sqlite:///pandora.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/pandora
# For MySQL:
# DATABASE_URL=mysql://user:password@localhost:3306/pandora

# Docker Configuration
DOCKER_ENABLED=true
DOCKER_ALLOWED_IMAGES=python:3.11-slim,node:18-alpine,ubuntu:22.04,alpine:latest
DOCKER_MEMORY_LIMIT=512m
DOCKER_CPU_LIMIT=0.5
DOCKER_READ_ONLY=true
DOCKER_NETWORK_MODE=none

# Network Configuration
NETWORK_TIMEOUT=30
MAX_REQUEST_SIZE=1048576

# Filesystem Configuration
MAX_FILE_SIZE=10485760

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=admin

# Sandbox Configuration
SANDBOX_ENABLED=true
SANDBOX_MAX_EXECUTION_TIME=300
SANDBOX_MAX_MEMORY=536870912
SANDBOX_MAX_FILE_SIZE=104857600
SANDBOX_ALLOW_NETWORK=false
